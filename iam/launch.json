{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "servicecatalog:*"
            ],
            "Resource": [
                "*"
            ],
            "Effect": "Allow"
        },
        {
            "Condition": {
                "ForAllValues:StringLike": {
                    "cloudformation:TemplateUrl": [
                        "https://s3-us-east-1.amazonaws.com/sagemaker-solutions-us-east-1/*",
                        "https://s3-us-east-2.amazonaws.com/sagemaker-solutions-us-east-2/*",
                        "https://s3-us-west-1.amazonaws.com/sagemaker-solutions-us-west-1/*",
                        "https://s3-us-west-2.amazonaws.com/sagemaker-solutions-us-west-2/*",
                        "https://sagemaker-solutions-us-east-1.s3.amazonaws.com/*",
                        "https://sagemaker-solutions-us-east-2.s3.amazonaws.com/*",
                        "https://sagemaker-solutions-us-west-1.s3.amazonaws.com/*",
                        "https://sagemaker-solutions-us-west-2.s3.amazonaws.com/*",
                        "https://s3.us-east-1.amazonaws.com/sc-*",
                        "https://s3.us-east-2.amazonaws.com/sc-*",
                        "https://s3.us-west-1.amazonaws.com/sc-*",
                        "https://s3.us-west-2.amazonaws.com/sc-*"
                    ]
                }
            },
            "Action": [
                "cloudformation:CreateStack"
            ],
            "Resource": [
                "*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "cloudformation:ListStackResources",
                "cloudformation:DescribeStackEvents",
                "cloudformation:DescribeStackResource",
                "cloudformation:DescribeStackResources",
                "cloudformation:DeleteStack",
                "cloudformation:SetStackPolicy",
                "cloudformation:UpdateStack"
            ],
            "Resource": [
                "*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "cloudformation:ListStacks",
                "cloudformation:GetTemplateSummary",
                "cloudformation:ValidateTemplate",
                "cloudformation:DescribeStacks"
            ],
            "Resource": [
                "*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::sc-*/*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "iam:CreateRole",
                "iam:GetRole",
                "iam:PassRole",
                "iam:DeleteRole",
                "iam:GetRolePolicy",
                "iam:PutRolePolicy",
                "iam:DeleteRolePolicy",
                "iam:DetachRolePolicy",
                "iam:AttachRolePolicy"
            ],
            "Resource": [
                "arn:aws:iam::*:role/sagemaker-soln-*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "iam:CreatePolicy",
                "iam:DeletePolicy"
            ],
            "Resource": [
                "arn:aws:iam::*:policy/sagemaker-soln-*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "lambda:InvokeFunction",
                "lambda:AddPermission",
                "lambda:RemovePermission",
                "lambda:CreateFunction",
                "lambda:DeleteFunction",
                "lambda:GetFunction",
                "lambda:GetFunctionConfiguration"
            ],
            "Resource": [
                "arn:aws:lambda:*:*:function:sagemaker-soln-*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "s3:CreateBucket",
                "s3:DeleteBucket",
                "s3:PutBucketNotification",
                "s3:PutBucketPublicAccessBlock",
                "s3:PutEncryptionConfiguration"
            ],
            "Resource": [
                "arn:aws:s3:::sagemaker-soln-*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::sagemaker-soln-*/*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::sagemaker-solutions-*/*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "sagemaker:CreateNotebookInstance",
                "sagemaker:StopNotebookInstance",
                "sagemaker:DeleteNotebookInstance",
                "sagemaker:DescribeNotebookInstance"
            ],
            "Resource": [
                "arn:aws:sagemaker:*:*:notebook-instance/sagemaker-soln-*"
            ],
            "Effect": "Allow"
        },
        {
            "Action": [
                "sagemaker:CreateNotebookInstanceLifecycleConfig",
                "sagemaker:DeleteNotebookInstanceLifecycleConfig",
                "sagemaker:DescribeNotebookInstanceLifecycleConfig"
            ],
            "Resource": [
                "arn:aws:sagemaker:*:*:notebook-instance-lifecycle-config/sagemaker-soln-*"
            ],
            "Effect": "Allow"
        }
    ]
}